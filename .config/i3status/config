# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = false
        interval = 5
}

#order += "wireless wlp2s0"
order += "ethernet _first_"
order += "disk /"
#order += "battery 0"
order += "volume master"
order += "cpu_temperature 0"
order += "tztime local"

disk / {
	format = "Disk: %avail"
}
wireless wlp2s0 {
  format_up = "  %essid (%quality)"
  format_down = "  NO WIFI"
}

ethernet _first_ {
  format_up = "E: %ip"
  format_down = "E: down"
}

battery 0 {
  format = "  %percentage"
}

cpu_temperature 0 {
  format = " %degrees°C"
}

volume master {
  format = "🔊 %volume"
  format_muted = "🔇 %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

tztime local {
  format = "  %Y-%m-%d %H:%M"
}
