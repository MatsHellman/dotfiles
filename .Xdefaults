! to match gnome-terminal "Linux console" scheme
! foreground/background
URxvt*background: 		#000000
URxvt*foreground: 		#ffffff
! black
URxvt.color0  : 		#000000
URxvt.color8  : 		#555555
! red
URxvt.color1  : 		#AA0000
URxvt.color9  : 		#FF5555
! green
URxvt.color2  : 		#00AA00
URxvt.color10 : 		#55FF55
! yellow
URxvt.color3  : 		#AA5500
URxvt.color11 : 		#FFFF55
! blue
URxvt.color4  : 		#0000AA
URxvt.color12 : 		#5555FF
! magenta
URxvt.color5  : 		#AA00AA
URxvt.color13 : 		#FF55FF
! cyan
URxvt.color6  : 		#00AAAA
URxvt.color14 : 		#55FFFF
! white
URxvt.color7  : 		#AAAAAA
URxvt.color15 : 		#FFFFFF

! Font definition
!URxvt*font: xft:terminus:pixelsize=14
URxvt.font: 			xft:Ubuntu Mono:pixelsize=14:Regular

! Cursor settings
URxvt.cursorColor: 		magenta

! ScrollBar
URxvt.scrollBar: 		false

!! Extensions
URxvt.perl-ext-common : 	default,matcher,font-size,searchable-scrollback
URxvt.urlLauncher     : 	firefox
URxvt.matcher.button  : 	1
!URxvt.resize-font.smaller:	C-j
!URxvt.resize-font.bigger:	C-k
!
!Tweaks for copy paste
!first disable iso mode
URxvt.iso14755 : false
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.keysym.Control-Meta-c: builtin-string:
URxvt.keysym.Control-Meta-v: builtin-string:

!Transparrency
URxvt.transparent:   true
URxvt.shading:       20
